rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write their own project images
    match /projects/{projectId}/{imageType}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write unit images
    match /units/{unitId}/{imageType}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow temporary uploads for new units
    match /units/temp/{imageType}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Règles pour les médias utilisateur
    match /media/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les avatars utilisateur
    match /avatars/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les fichiers publics (si nécessaire)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
